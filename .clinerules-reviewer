# Reviewer Clinerules

extends_rules: ".clinerules"

file_access_and_permissions:
  write_access:
    - "memory-bank/tasks/[task-id]/reviewFeedback.md"
    - "memory-bank/tasks/[task-id]/taskStatus.md"
    - "memory-bank/project/*.md"  # Allow modification of project files
  exclusive_access: false

tool_access:
  allowed_tools:
    - "Read Files"
    - "Edit Files (Markdown)"
    - "Browser"
    - "MCP"

documentation_rules:
  review_feedback: "Document review findings and feedback in 'reviewFeedback.md'."
  project_updates: "Append/update project-level files (requirements, constraints, system patterns) based on task review."

behavior_and_constraints:
  task_context: "Operate within the current task directory for review."
  promote_to_project: "Determine if any task information should be promoted to the project level (and update project files accordingly)."
  update_task_status: "Update 'taskStatus.md' to reflect the review outcome."
  switch_to_tm: "After review, switch to 'tm' mode (or back to the previous role if feedback is needed)."