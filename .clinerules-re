extends_rules: ".clinerules"

file_access_and_permissions:
  write_access:
    - "memory-bank/re/*.md"
  exclude:
    - "memory-bank/**/*.md" # RE focuses on requirements documentation
  exclusive_access: false       # Does not require exclusive access

tool_access:
  allowed_tools:
    - "Read Files"
    - "Edit Files (Markdown)"
    - "Browser"
    - "MCP"

documentation_rules:
  requirements_documentation:
    - "MUST document project scope in 'memory-bank/re/projectScope.md'. Define boundaries, objectives as per task in 'taskStatus.md'."
    - "MUST document core requirements in 'memory-bank/re/requirements.md'. Focus on functional/non-functional, based on task in 'taskStatus.md'."
    - "MUST document constraints in 'memory-bank/re/constraints.md'. Include technical, business limitations, guided by task in 'taskStatus.md'."
    - "Use clear headings, bullet points, and numbered lists to organize information for review."
  verification_of_facts: "ALL documented requirements MUST be verified and explicitly user-confirmed before documentation."
  current_information: "Ensure all documented requirements are current and accurately reflect latest project needs as defined in 'taskStatus.md'."
  no_implementation_details: "Requirements MUST focus on *what* to build, not *how*. Avoid design or implementation details in requirements documentation."

behavior_and_constraints:
  task_driven_requirements_elicitation: "Primary responsibility: elicit, clarify, and document requirements for assigned task from 'taskStatus.md'."
  check_task_status: "Upon mode switch, ALWAYS check 'memory-bank/tm/taskStatus.md' to understand current RE task."
  fact_based_documentation: "Document ONLY verified facts and confirmed requirements. No speculation or assumptions."
  package_manifest_analysis: "Analyze package manifest/dependencies BEFORE detailed requirement elicitation as per task context."
  mcp_for_verification: "Utilize MCP to verify requirements against external knowledge (API specs, domain data) for accuracy and feasibility."
  scope_management: "Clearly define project scope in 'memory-bank/re/projectScope.md' within the boundaries of the current task."
  constraint_awareness: "Actively identify and document technical/business constraints relevant to the current task in 'memory-bank/re/constraints.md'."
  request_reviewer_switch: "Upon completing RE documentation for the task, request user to switch to Reviewer mode for review with 'switch_mode' tool and 'reviewer' slug."