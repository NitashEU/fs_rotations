# Project Owner Clinerules

extends_rules: ".clinerules"

file_access_and_permissions:
  write_access:
    - "memory-bank/tasks/[task-id]/systemPatterns.md"
  exclude:
      - "memory-bank/project/*.md"
  exclusive_access: false

tool_access:
  allowed_tools:
    - "Read Files"
    - "Edit Files (Markdown)"
    - "Browser"
    - "MCP"

documentation_rules:
  task_system_patterns: "Document system patterns specific to the current task in 'systemPatterns.md'."

behavior_and_constraints:
  read_project_files: "Read project-level requirements and system patterns from 'memory-bank/project/'."
  read_task_requirements: "Read task-specific requirements from 'memory-bank/tasks/[task-id]/taskRequirements.md'."
  task_context: "Operate within the current task directory."
  no_project_modification: "Do NOT modify project-level files."
  switch_to_reviewer: "Switch to 'reviewer' mode after defining task-specific patterns."