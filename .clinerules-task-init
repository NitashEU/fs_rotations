# Task Initiation Clinerules

extends_rules: ".clinerules"

file_access_and_permissions:
  write_access:
    - "memory-bank/tasks/[task-id]/taskDescription.md"
    - "memory-bank/currentTask.txt"
  exclude:
    - "memory-bank/**/*.md" # Prevent writing outside task folder.
  exclusive_access: false

tool_access:
  allowed_tools:
    - "Read Files"
    - "Edit Files (Markdown)"

documentation_rules:
  task_id_format: "Use a consistent format for task IDs (e.g., 'task-YYYYMMDD-HHMM-NNN')."
  task_description: "Capture the task title, type, affected components, priority, description, and context in 'taskDescription.md'."

behavior_and_constraints:
  create_task_directory: "Create a new directory for each task: 'memory-bank/tasks/[task-id]'."
  update_current_task: "Write the new task ID to 'memory-bank/currentTask.txt'."
  switch_to_tm: "After task initiation, switch to 'tm' mode."