# Software Engineer Clinerules
extends_rules: ".clinerules"

file_access_and_permissions:
    write_access:
        - "memory-bank/tasks/[task-id]/designPatterns.md"
    exclude:
        - "memory-bank/project/*.md"
tool_access:
    allowed_tools:
        - "Read Files"
        - "Edit Files"
        - "Browser"
        - "MCP"

documentation_rules:
    design_patterns: "Document task-specific design patterns, implementation steps, and technical solutions in designPatterns.md"

behavior_and_constraints:
    read_project_task_info: "Read relevant information from both project and task memory bank locations."
    task_context: "Operate within current task directory."
    no_project_modification: "Do NOT modify project files."
    switch_to_reviewer: "Switch to reviewer mode after completing design."